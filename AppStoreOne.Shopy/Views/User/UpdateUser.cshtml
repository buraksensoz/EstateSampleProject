@model UserUpdateDto

<form asp-action="UpdateUser" method="post" class="mx-auto bs-w-form mt-3 border border-1 shadow p-3">
    <div class="form-group text-lg-center ">
        <h6>Kullanıcı Düzenle</h6>
        <hr />
    </div>
    <input type="hidden" asp-for="@Model.Id" />

    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>İsim Soyad</label>
        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        <input asp-for="@Model.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label>E-Posta</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Telefon</label>
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label>Yetki Tipi</label>
        <select asp-for="@Model.AuthType" class="form-select">
            <option value="1">Yönetici</option>
            <option value="2">Standart</option>
        </select>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <button class="btn btn-md btn-success float-end" type="submit">Kaydet</button>
    </div>

</form>
